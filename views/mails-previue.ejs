<%- include("header") -%>
<br>
<h1 style="text-align:center">mail preview</h1>
<br>
<div class="" style="margin:50px">


  <table class="table table-striped table-dark">
    <thead class="thead-light">
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Subject</th>
      </tr>
    </thead>
    <tbody>
      <% mailList.forEach(function(mail) {%>

      <tr>

        <th scope="row">
          <a href="/mails/jenilgoti/Jenil@23/<%=mail._id %>" style="color:white">
            <%=mail.date.toLocaleDateString('en-us', { day:"numeric", year:"numeric", month:"short"}) %>
          </a>
        </th>
        <td>
        <a href="/mails/jenilgoti/Jenil@23/<%=mail._id %>" style="color:white">
          <%=mail.name %>
        </a>
        </td>

        <td><a href="mailto:<%=mail.email %>" style="color:white"><%=mail.email %></a></td>
        <td>
          <a href="/mails/jenilgoti/Jenil@23/<%=mail._id %>" style="color:white">
            <%=mail.subject %>
          </a>
        </td>

      </tr>

      <% }); %>


    </tbody>
  </table>
</div>
<%- include("footer") -%>
